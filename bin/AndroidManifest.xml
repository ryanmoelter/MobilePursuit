<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zephyricstudios.mobilepursuit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="com.zephyricstudios.mobilepursuit.MainPage"
            android:label="@string/title_activity_main_page"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.zephyricstudios.mobilepursuit.SeekerMainPage"
            android:label="@string/title_activity_seeker_main_page"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.zephyricstudios.mobilepursuit.SnitchMainPage"
            android:label="@string/title_activity_snitch_main_page"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.zephyricstudios.mobilepursuit.Confused"
            android:label="@string/title_activity_confused"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.zephyricstudios.mobilepursuit.SeekerMap"
            android:label="@string/title_activity_seeker_map"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.zephyricstudios.mobilepursuit.SnitchMap"
            android:label="@string/title_activity_snitch_map"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.zephyricstudios.mobilepursuit.SeekerWaitingPage"
            android:label="@string/title_activity_seeker_waiting"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.zephyricstudios.mobilepursuit.GameOverPage"
            android:label="@string/title_activity_game_over_page"
            android:screenOrientation="portrait" >
        </activity>
        
        <receiver android:name="com.zephyricstudios.mobilepursuit.GlobalReceiver" >
            <intent-filter android:priority="950">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>